<div data-aos="zoom-in-up mb-4">
    <h2 class="text-center fw-bold mb-4">
        La location de bateau en toute simplicité 
    </h2>
</div>

<br>

<div data-aos="zoom-in-up">
    <div class="search-card">  

        <h3 class="text-center text-light fw-bold mt-4">
           Trouvez votre bateau idéal
        </h3>

        <%= search_form_for @q, url: produits_path, method: :get do |f| %>

            <div class="">

                <div class="d-flex flex-wrap justify-content-center">
                    <div class="m-2">
                        <%= f.select :destination_id_eq, @destinations.collect { |c| [c.full_name, c.id] }, 
                        { include_blank: '- Ville de départ -' },
                        class: "form-select text-center fw-bold sized-field"  %>
                    </div>
                    <div class="m-2">
                        <%= f.select :type_produit_eq, options_for_select(Produit.bateau_types.keys),
                            { include_blank: '- Type de bateau -' },
                            class: "form-select text-center fw-bold sized-field" %>                    
                    </div>
                </div>

                 <div class="d-flex flex-wrap justify-content-center">
                    <div class="m-2">
                        <%= f.number_field :prixjour_gteq, class: "form-control text-center sized-field", 
                            placeholder: "Prix min" %>
                    </div>
                    <div class="m-2">
                        <%= f.number_field :prixjour_lteq, class: "form-control text-center sized-field", 
                        placeholder: "Prix max" %>
                    </div>
                
                </div> 

                <div class="text-end">
                    <%= f.submit "Chercher", class: "btn btn-success my-2 fw-bold" %>
                </div>

            </div>

        <% end %>

    </div>

</div>


