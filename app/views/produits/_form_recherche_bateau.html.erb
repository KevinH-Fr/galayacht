<%= search_form_for @q, url: produits_path, method: :get do |f| %>
    <div class="d-flex flex-wrap justify-content-center">
        <div class="m-2 sized-field">
            <%= f.select :destination_id_eq, @destinations.collect { |c| [c.full_name, c.id] }, 
            { include_blank: '- Ville de dÃ©part -' },
            class: "form-select form-recherche-input"  %>
        </div>
        <div class="m-2 sized-field">
            <%= f.select :type_produit_eq, options_for_select(Produit.bateau_types.keys),
                { include_blank: '- Type de bateau -' },
                class: "form-select form-recherche-input" %>                    
        </div>

        <div class="m-2 sized-field">
            <label class="checkbox-inline">
                <%= f.check_box :location_eq %>
                Location
            </label>
        </div>
        
        <div class="m-2 sized-field">
            <label class="checkbox-inline">
                <%= f.check_box :vente_eq %>
                Vente
            </label>
        </div>

        
    </div>
    <div class="d-flex flex-wrap justify-content-center">
        <div class="m-2 sized-field">
            <%= f.number_field :prixjour_gteq, class: "form-control form-recherche-input", 
                placeholder: "Prix min" %>
        </div>
        <div class="m-2 sized-field">
            <%= f.number_field :prixjour_lteq, class: "form-control form-recherche-input", 
            placeholder: "Prix max" %>
        </div>    
    </div> 
    <div data-turbo="false" class="d-flex flex-wrap justify-content-center mt-3">
        <%= f.submit "Chercher", class: "btn primary-colored my-2 fw-bold btn-text-styled large-btn-sized" %>
    </div>
<% end %>