
<h1 class="mt-5 h1-styled">Contrats</h1>

 <div id="bailleurs" class="container-fluid">
  <div class="row justify-content-center">
    <% @contrats.each do |contrat| %>
      <div class="col-sm-6 col-md-4 col-lg-3 d-flex align-items-center justify-content-center mb-3">
         <%= render contrat %> 
      </div>
    <% end %>
  </div>
</div> 

<% if current_user && user_admin %>
  <%= link_to "New contrat", new_contrat_path, class: "btn btn-warning" %>
<% end %>