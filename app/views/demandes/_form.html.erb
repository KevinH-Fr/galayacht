      <h2><%= pluralize(demande.errors.count, "error") %> prohibited this demande from being saved:</h2>

      <ul>
        <% demande.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group my-3">
    <%= form.label :nom, class: "input-group-text label-with-format" %>
    <%= form.text_field :nom, class: "form-control field-with-format" %>
  </div>

   <div class="input-group my-3">
    <%= form.label :mail, class: "input-group-text label-with-format" %>
    <%= form.text_field :mail, class: "form-control field-with-format" %>
  </div>

  <div class="input-group my-3">
    <%= form.label :telephone, class: "input-group-text label-with-format" %>
    <%= form.text_field :telephone, class: "form-control field-with-format" %>
  </div>

  <div class="input-group my-3">
    <%= form.label :type, class: "input-group-text label-with-format" %>
    <% if @produit %>
      <%= form.text_field :type_demande, value: "Demande sur : #{produit_full_name(@produit.id)}", class: "form-control field-with-format" %>
    <% elsif @demande_proprietaire %>
      <%= form.text_field :type_demande, value: "Demande propriÃ©taire de bateau", class: "form-control field-with-format" %>
    <% else %>
      <%= form.text_field :type_demande, class: "form-control field-with-format" %>
    <% end %>
  </div>

  <div class="input-group my-3">
    <%= form.label :commentaires, class: "input-group-text label-with-format" %>
    <%= form.text_area :commentaires, class: "form-control field-with-format" %>
  </div>


  <div class="container-fluid text-end m-0 mt-4 p-0">

    <button type="submit" class="btn primary-colored fw-bold">
