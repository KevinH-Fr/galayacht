<%= form_with(model: bailleur) do |form| %>
  <% if bailleur.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bailleur.errors.count, "error") %> prohibited this bailleur from being saved:</h2>

      <ul>
        <% bailleur.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group">
    <%= form.label :prenom, class: "input-group-text label-with-format" %>
    <%= form.text_field :prenom, class: "form-control field-with-format" %>
  </div>

  <div class="input-group">
    <%= form.label :nom, class: "input-group-text label-with-format" %>
    <%= form.text_field :nom, class: "form-control field-with-format" %>
  </div>

  <div class="input-group">
    <%= form.label :telephone, class: "input-group-text label-with-format" %>
    <%= form.text_field :telephone, class: "form-control field-with-format" %>
  </div>

  <div class="input-group">
    <%= form.label :mail, class: "input-group-text label-with-format" %>
    <%= form.text_field :mail, class: "form-control field-with-format" %>
  </div>

  <div class="input-group">
    <%#= form.label :user, class: "input-group-text label-with-format" %>
    <%= form.hidden_field :user_id, value: current_user.id, class: "form-control field-with-format" %>
  </div>

  
  <div class="input-group mb-1">
    <%= form.label :image, class:"input-group-text label-with-format" %>
    <%= form.file_field :profilepic, class:"form-control field-with-format" %>
  </div>

  <hr>

    <!-- User fields -->
  <%= form.fields_for :user, @bailleur.user do |user_fields| %>

          <div class="input-group">
            <%= user_fields.label :email, class: "input-group-text" %>
            <%= user_fields.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="input-group">
            <%= user_fields.label :password, class: "input-group-text" %>
            <%= user_fields.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="input-group">
            <%= user_fields.label :confirmation, class: "input-group-text" %>
            <%= user_fields.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

  <% end %>

  <hr>
  
  <div class="col text-end">
    <%= render "shared/form_submit" %> 
  </div>

<% end %>
