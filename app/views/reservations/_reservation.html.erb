<div id="<%= dom_id reservation %>">

  <div class="card produit-card">
    <%= image_tag(produit_img(reservation.id), class:"img-produit top-rounded") if produit_img(reservation.id).present? %> 
    <div class="card-body">
      <h5 class="card-title"> 
        Réservation #<%= num_resa(reservation)  %> <hr>
        <%= produit_full_name(reservation.produit_id) %> 
      </h5>
      <p class="card-text">

        <p>
          <strong>Propriétaire:</strong>
          <%= bailleur_full_name(bailleur_produit_courant(reservation.produit_id)) %>
        </p>

        <p>
          <strong>Locataire:</strong>
          <%= preneur_full_name(reservation.preneur_id) %>
        </p>

        <p>
          <strong>Debutlocation:</strong>
          <%= reservation.debutlocation %>
        </p>

        <p>
          <strong>Finlocation:</strong>
          <%= reservation.finlocation %>
        </p>

        <p>
          <strong>Prix:</strong>
          <%= reservation.prix %>
        </p>
          <%#= reservation.statut %>

      </p>
      <hr>
      
      <div class="card-body">
        <%= link_to "", reservation_path(reservation), class: "btn btn-action btn-primary fa-solid fa-eye" %>
        <%= link_to "", edit_reservation_path(reservation), class: "btn btn-action btn-secondary fa-solid fa-pen-to-square" %>
        <%= link_to "", edition_reservation_path(reservation), class: "btn btn-action btn-outline-danger fa-regular fa-file-pdf", target: '_blank' %>
        <%#= link_to "test html", edition_test_reservation_path, class: "btn btn-outline-danger fa-regular fa-file-pdf", target: '_blank' %>
        <%= button_to "", reservation, method: :delete, class: "btn btn-action btn-danger fa-solid fa-trash-can",
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> 
      </div>

    </div>
  </div>

</div>
