
<h1>Preneurs</h1>

 <div id="preneurs" class="container-fluid">
  <div class="row justify-content-center">
    <% @preneurs.each do |preneur| %>
      <div class="col-sm-6 col-md-4 col-lg-3 d-flex align-items-center justify-content-center mb-3">
         <%= render preneur %> 
      </div>
    <% end %>
  </div>
</div> 

<% if current_user && user_admin %>
  <%= link_to "New preneur", new_preneur_path, class: "btn btn-warning" %>
<% end %>