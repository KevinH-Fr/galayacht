
<div class="card mb-3">
  <div class="row g-0 align-items-center">
    <div class="col-md-4">
        <%= image_tag("/images/sail-boat.webp", class:"img-fluid rounded-start") %> 
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Se connecter</h5>
          <p class="card-text">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="input-group">
                <%= f.label :email, class: "input-group-text" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="input-group">
                <%= f.label :password, class: "input-group-text" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field fs-5 text-start ">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: "fs-6" %>
                </div>
              <% end %>
              <hr>
              
              <div class="row actions text-end">
                <div class="col text-start fs-6">
                  <%= render "devise/shared/links" %>
                </div>
                <div class="col text-end">   
                  <%= f.submit "Log in", class:"btn fw-bold btn-primary" %>
                </div>
              </div>

            <% end %>

          </p>
    
      </div>
    </div>
  </div>
</div>